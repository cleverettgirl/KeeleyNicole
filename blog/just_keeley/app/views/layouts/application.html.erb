  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Playfair+Display:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.icon' %>

</head>
<body>



  <div id="sidebar">
    <div id="logo" class="img-responsive">
      <%= link_to root_path do %>
        <%= image_tag "unnamed-2.svg" %>
      <% end %>
    </div>


